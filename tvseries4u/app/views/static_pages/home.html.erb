<head>
<title>Home | TVSeries4u</title>
</head>
<body>
	<% if logged_in? %>
	<h1>Lista de series</h1>
	<div class="jumbotron">
		<center>

		<div class="container">
			<nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <ul class="nav navbar-nav">
			<li class="active"><%= link_to "Todas las series", '#' %></li>
      <li><%= link_to "Filtrar", filtrar_path %></li>
      <li><%= link_to "Enviar a mail", movie_mail_path %></li>
      <li><%= link_to "Descargar lista", movie_download_path %></li>
    </ul>

    <ul class="nav navbar-nav navbar-right">
			<li><%= link_to current_user do %>
				  <span class="glyphicon glyphicon-user"></span>
					<%= @user.name %>
					<% end %></li>
			<li><%= link_to logout_path, method: :delete do %>
				  <span class="glyphicon glyphicon-log-out"></span>
					Salir
					<% end %></li>
    </ul>
  </div>
</nav>

		</div>
		</center>
	  <div class="row">
        <div class="col-md-15">
      		<%= render 'shared/feed' %>
					<center><%= link_to "Añadir nueva serie", new_movie_path, class: "btn btn-lg btn-info",
					style: 'color:#FFFFFF;' %>      <%= link_to "Filtrar", filtrar_path, class: "btn btn-lg btn-info",
					style: 'color:#FFFFFF;' %></center>
    	</div>
	  </div>
	</div>

	<% else %>
	<div class="center jumbotron">
	<h1 style="font-family: courier">Bienvenido a TVSeries4u</h1>
	<%= link_to "Ingresar", login_path, class: "btn btn-lg btn-info", style: 'color:#FFFFFF;'%><br><br>
	Nuevo en TVSeries4u? <%= link_to "regístrate ahora!", signup_path, style: 'color:#2E9AFE;' %></li>
	<!--<%= link_to "Regístrate ahora!", signup_path, class: "btn btn-lg btn-info" %> -->
	</div>
	<% end %>
</body>
