<% provide(:title, @user.name) %>
<div class="jumbotron">
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h4><font color="black">
        <%= gravatar_for @user %><br>
        <%= @user.name %>
      </font></h4>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.movies.any? %>
      <h3>Series (<%= @user.movies.count %>)</h3>
      <ol class="microposts">
        <%= render @movies %>
      </ol>
    <% end %>
  </div>
  </div>
</div>
