<% provide(:title, 'All users') %>
<h1>Usuarios</h1>
<div class="jumbotron">
<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= gravatar_for user, size: 50 %>
      <% if current_user.id == user.id %>
      <%= link_to user.name, user %>
      <% else %>
      <%= user.name %>
      <% end %>
    </li>
  <% end %>
</ul>
</div>
