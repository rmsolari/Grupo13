<% provide(:title, 'All users') %>
<h1>Usuarios</h1>
<div class="jumbotron">
<ul class="users">
  <% @users.each do |user| %>
    <% if user != current_user %>
      <li>
        <%= gravatar_for user, size: 50 %>
        <%= link_to user.name, user %>
        <%= link_to "Eliminar", admin_destroy_user_path(user),
         method: :delete,
         data: { confirm: "EstÃ¡s seguro de eliminar a "+user.name+"?" } %>
      </li>
    <% else %>
      <li>
        <%= gravatar_for user, size: 50 %>
        <%= link_to user.name, user %>
      </li>
    <% end %>
  <% end %>
</ul>
</div>
