<li id="<%= movie.id %>">
  <% if logged_in? %>
  <%= link_to movie.name,  movie, style: 'color:#2E9AFE;' %></span>
  <% else %>
    <b><%= movie.name %></b>
  <% end %>
  <% if movie.gender.present? %>
    <span class="gender">, Género: <%= movie.gender %></span>
  <% end %>
  <% if movie.description.present? %><br><br>
    <span class="description">Descripción: <%= movie.description %></span>
  <% end %>
  <span class="timestamp">
    Posted <%= time_ago_in_words(movie.created_at) %> ago.

    <% if current_user.present? && (current_user.id == movie.user_id || current_user.admin?)%>
      <%= link_to "delete", admin_destroy_movie_path(movie),
       method: :delete, data: { confirm: "Estás seguro que quieres eliminar la serie #{movie.name} de #{movie.user.name}?" } %>
    <% end %>
  </span>
</li><br>
