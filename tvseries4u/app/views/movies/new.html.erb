<h1>Añadir nueva serie</h1>
<div clas="container">
  <div class="jumbotron">
    <%= form_for(@movie) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <%= f.label :nombre %>
    <%= f.text_area :name, placeholder: "Ingresa nombre de nueva serie .." %>
    <%= f.label :"selecciona género" %>
    <%= f.collection_select :gender, Gender.all, :name, include_blank: true %>
    <%= f.text_area :gender, placeholder: "Añadir un nuevo género " %>
    <%= f.label :descripción %>
    <%= f.text_area :description, placeholder: "Ingresa descripción de serie" %>
    <%= f.submit "Añadir", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
