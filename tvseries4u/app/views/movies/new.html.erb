<%= form_for(@movie) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :name, placeholder: "Ingresa nombre de nueva serie .." %>
    <%= f.text_area :gender, placeholder: "Ingresa género de serie" %>
  </div>
  <%= f.submit "Añadir", class: "btn btn-primary" %>
<% end %>
