<% @comments.each do |comment| %>
  <b><%= comment.user.email %>:</b>
  <%= comment.text %>
  <%= comment.created_at %>
  <% if current_user == comment.user || current_user.admin? %>
    <%= link_to "Borrar", [comment.movie, comment], method: :delete %>
  <% end %>
  </br>
<% end %>
<% if logged_in? %>
	<%= render 'comments/form' %>
<% end %>